{
    "name": "blank-framework/file-path-router",
    "description": "Package for the Blank Framework FilePathRouter",
    "type": "library",
    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "BlankFramework\\FilePathRouter\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Adrian du Plessis",
            "email": "adrian@blankframework.com"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "pestphp/pest": "^2.24"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage --min=95 --coverage-cobertura coverage/cobertura.xml"
    }
}
